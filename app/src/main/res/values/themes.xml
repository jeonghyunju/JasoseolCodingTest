<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JasoseolCodingTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Edit Text !-->
    <style name="TextInputLayoutTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/gray300</item>
        <item name="android:textCursorDrawable">@color/gray900</item>
        <item name="boxStrokeColor">@color/gray200</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="endIconMode">clear_text</item>
        <item name="hintEnabled">false</item>
        <item name="hintAnimationEnabled">false</item>
    </style>
</resources>